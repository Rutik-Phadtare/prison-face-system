<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1500.0" style="-fx-background-color: #f0f2f5;" stylesheets="@../css/modern.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prison.controller.GuardController">

    <!-- â•â•â• TOP HEADER â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <top>
        <VBox style="-fx-background-color: white;                      -fx-border-color: #d1d9e6;                      -fx-border-width: 0 0 2 0;                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 10, 0, 0, 3);">
            <padding>
                <Insets bottom="20" left="30" right="30" top="20" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="0">
                <!-- Title block -->
                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <Label style="-fx-text-fill: #e67e22;                                   -fx-font-size: 12;                                   -fx-font-weight: 800;                                   -fx-letter-spacing: 2;" text="PERSONNEL MANAGEMENT" />
                    <Label style="-fx-font-size: 30;                                   -fx-font-weight: 900;                                   -fx-text-fill: #172b4d;" text="Guard Force Management" />
                    <Label style="-fx-text-fill: #8898aa;                                   -fx-font-size: 13;                                   -fx-font-weight: 600;" text="Monitor and assign security personnel shifts  â€¢  Double-click any row to open full profile" />
                </VBox>

                <!-- Quick stats bar -->
                <HBox alignment="CENTER" spacing="25" style="-fx-padding: 0 0 0 20;">
                    <VBox alignment="CENTER" spacing="2" style="-fx-background-color: #fff3e0;                                  -fx-background-radius: 10;                                  -fx-padding: 12 20;                                  -fx-border-color: #e67e22;                                  -fx-border-width: 0 0 0 4;                                  -fx-border-radius: 10;">
                        <Label style="-fx-text-fill: #e67e22; -fx-font-size: 11; -fx-font-weight: 700;" text="TOTAL GUARDS" />
                        <Label fx:id="guardCount" style="-fx-text-fill: #172b4d; -fx-font-size: 22; -fx-font-weight: 900;" text="â€”" />
                    </VBox>
                </HBox>
            </HBox>
        </VBox>
    </top>

    <!-- â•â•â• CENTER TABLE â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <center>
        <TableView fx:id="guardTable" styleClass="dark-table">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="60" text="ID" />
                <TableColumn fx:id="nameCol" prefWidth="280" text="Guard Name" />
                <TableColumn fx:id="designationCol" prefWidth="180" text="Designation" />
                <TableColumn fx:id="shiftCol" prefWidth="180" text="Shift" />
                <TableColumn fx:id="statusCol" prefWidth="130" text="Live Status" />
                <TableColumn fx:id="joiningCol" prefWidth="150" text="Joined" />
                <TableColumn fx:id="descCol" prefWidth="400" text="Performance Notes" />
            </columns>
            <placeholder>
                <Label style="-fx-font-size: 16; -fx-text-fill: #8898aa; -fx-font-weight: 700;" text="No guards found. Click 'Add Guard' to register one." />
            </placeholder>
        </TableView>
    </center>

    <!-- â•â•â• BOTTOM ACTION BAR â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 18 30;                      -fx-background-color: white;                      -fx-border-color: #d1d9e6;                      -fx-border-width: 1 0 0 0;                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, -2);">

            <!-- Status / selection info -->
            <Label fx:id="statusInfoLabel" style="-fx-text-fill: #525f7f;                           -fx-font-size: 13;                           -fx-font-weight: 600;" text="No guard selected  â€¢  Double-click a row to open full profile" />

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Remove Guard -->
            <Button onAction="#deleteGuard" prefHeight="44" prefWidth="155" style="-fx-background-color: #ef4444;                            -fx-text-fill: white;                            -fx-font-weight: 800;                            -fx-font-size: 13;                            -fx-background-radius: 10;                            -fx-cursor: hand;                            -fx-effect: dropshadow(gaussian, rgba(239,68,68,0.35), 8, 0, 0, 3);" text="â›”  Remove Guard" />

            <!-- Print Guard Table -->
            <Button onAction="#printGuardTable" prefHeight="44" prefWidth="185" style="-fx-background-color: #11cdef;                            -fx-text-fill: white;                            -fx-font-weight: 800;                            -fx-font-size: 13;                            -fx-background-radius: 10;                            -fx-cursor: hand;                            -fx-effect: dropshadow(gaussian, rgba(17,205,239,0.35), 8, 0, 0, 3);" text="ðŸ–¨ï¸  Print Guard Table" />

            <!-- Add Guard â€” primary CTA -->
            <Button onAction="#openNewGuardProfile" prefHeight="44" prefWidth="165" style="-fx-background-color: #e67e22;                            -fx-text-fill: white;                            -fx-font-weight: 800;                            -fx-font-size: 14;                            -fx-background-radius: 10;                            -fx-cursor: hand;                            -fx-effect: dropshadow(gaussian, rgba(230,126,34,0.45), 10, 0, 0, 4);" text="ï¼‹  Add Guard" />
        </HBox>
    </bottom>

</BorderPane>
