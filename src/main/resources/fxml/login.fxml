<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<StackPane minHeight="100.0" minWidth="100.0" prefHeight="820.0" prefWidth="1530.0" style="-fx-background-image: url(/images/bg_login.png); -fx-background-size: cover; -fx-background-repeat: no-repeat;" styleClass="root" stylesheets="@../css/modern.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prison.controller.LoginController">

    <VBox alignment="CENTER" cache="true" focusTraversable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" opacity="0.93" prefHeight="600.0" prefWidth="500.0" spacing="18" style="-fx-background-radius: 30; -fx-border-color: Orange; -fx-border-radius: 30;" styleClass="login-card" StackPane.alignment="CENTER">

        <!-- LOGO -->
        <ImageView fitHeight="146.0" fitWidth="190.0" preserveRatio="true">
            <image>
                <Image url="@../images/logo.png" />
            </image>
            <VBox.margin>
                <Insets bottom="50.0" />
            </VBox.margin>
        </ImageView>

        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="55.0" prefWidth="267.0" style="-fx-font-size: 30;" styleClass="login-title" text="System Login" textAlignment="CENTER" textFill="#f00707">
            <VBox.margin>
                <Insets top="-50.0" />
            </VBox.margin>
            <font>
                <Font name="Times New Roman Bold" size="24.0" />
            </font>
            <effect>
                <Glow />
            </effect>
        </Label>

        <TextField fx:id="usernameField" promptText="Username" style="-fx-background-color: #020617; -fx-text-fill: 'white';" styleClass="login-input" />

        <!-- ── ONLY CHANGE: PasswordField wrapped in a StackPane for eye-toggle ── -->
        <StackPane fx:id="passwordWrapper" style="-fx-padding: 0; -fx-background-color: transparent;" styleClass="login-input">
            <PasswordField fx:id="passwordField" maxWidth="Infinity" minHeight="-Infinity" prefHeight="40.8" promptText="Password" style="-fx-background-color: #020617; -fx-text-fill: 'white'; -fx-padding: 6 36 6 10;" styleClass="login-input" StackPane.alignment="CENTER" />
        </StackPane>
        <!-- ───────────────────────────────────────────────────────────────────── -->

        <Label fx:id="messageLabel" styleClass="login-message" />

        <Button onAction="#handleLogin" styleClass="login-button" text="Admin Login" textAlignment="CENTER" textFill="WHITE" textOverrun="CLIP" underline="true">
            <font>
                <Font size="16.0" />
            </font>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </Button>

        <Button layoutX="112.0" layoutY="336.0" onAction="#handleCoAdminLogin" styleClass="login-button" text="Co-Admin Login" textAlignment="CENTER" textFill="WHITE" textOverrun="CLIP" underline="true">
            <font>
                <Font size="16.0" />
            </font>
        </Button>

        <Label styleClass="login-footer" text="Prison Management System · Secure Access" />
        <Hyperlink onAction="#handleacount" text="Forget Password" />
        <StackPane.margin>
            <Insets right="800.0" />
        </StackPane.margin>

    </VBox>

    <VBox alignment="CENTER" focusTraversable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="700.0" StackPane.alignment="CENTER">
        <StackPane.margin>
            <Insets bottom="250.0" left="300.0" />
        </StackPane.margin>
        <children>
            <Label prefHeight="91.0" prefWidth="472.0" style="-fx-font-size: 80; -fx-font-weight: bold; -fx-font-family:'Times New Roman';" text="Public Safety " textAlignment="CENTER">
                <font>
                    <Font name="Bell MT" size="96.0" />
                </font>
                <VBox.margin>
                    <Insets />
                </VBox.margin>
                <textFill>
                    <LinearGradient endX="0.6931818037322073" endY="0.5795454468690988" startX="0.3229166666666667">
                        <stops>
                            <Stop>
                                <color>
                                    <Color red="1.0" green="0.47058823704719543" />
                                </color>
                            </Stop>
                            <Stop offset="1.0">
                                <color>
                                    <Color red="0.0313725508749485" green="0.11764705926179886" blue="0.4941176474094391" />
                                </color>
                            </Stop>
                        </stops>
                    </LinearGradient>
                </textFill>
            </Label>
            <Label alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="70.0" prefWidth="613.0" style="-fx-font-size: 35; -fx-font-family: 'Arial';" text="Integrated Management System " textAlignment="CENTER" textFill="#0a206b">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
                <font>
                    <Font name="Bodoni MT Poster Compressed" size="58.0" />
                </font>
                <padding>
                    <Insets bottom="5.0" />
                </padding>
            </Label>
        </children>
    </VBox>
   <ImageView fitHeight="112.0" fitWidth="111.0" preserveRatio="true" StackPane.alignment="TOP_RIGHT">
      <image>
         <Image url="@../images/logo2.png" />
      </image>
      <StackPane.margin>
         <Insets right="80.0" top="10.0" />
      </StackPane.margin>
   </ImageView>

</StackPane>
