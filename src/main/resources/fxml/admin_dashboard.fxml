<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1500.0" spacing="20" stylesheets="@../css/modern.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.prison.controller.AdminDashboardController">

    <!-- HEADER -->
    <fx:include source="header.fxml" />

    <!-- DASHBOARD CARDS -->
    <HBox alignment="CENTER" spacing="20" style="-fx-padding: 30;">

        <!-- PRISONERS -->
        <VBox alignment="CENTER" spacing="12" styleClass="card">
            <Label styleClass="title" text="Prisoners" />
            <Button onAction="#openPrisonerManagement" styleClass="primary-button" text="Manage Prisoners" />
        </VBox>

        <!-- GUARDS -->
        <VBox alignment="CENTER" spacing="12" styleClass="card">
            <Label styleClass="title" text="Guards" />
            <Button onAction="#openGuardManagement" styleClass="primary-button" text="Manage Guards" />
        </VBox>

        <!-- FACE RECOGNITION -->
        <VBox alignment="CENTER" spacing="12" styleClass="card">
            <Label styleClass="title" text="Recognition" />
            <Button onAction="#openFaceRecognition" styleClass="primary-button" text="Face Recognition" />
        </VBox>

        <!-- âœ… RECOGNITION LOGS (NEW) -->
        <VBox alignment="CENTER" spacing="12" styleClass="card">
            <Label styleClass="title" text="Logs" />
            <Button onAction="#openRecognitionLogs" styleClass="primary-button" text="Recognition Logs" />
        </VBox>

    </HBox>

</VBox>
