<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.prison.controller.LoginController"
            styleClass="bg-login">

    <!-- HEADER -->
    <top>
        <fx:include source="header.fxml"/>
    </top>

    <!-- CENTER CONTENT -->
    <center>
        <HBox alignment="CENTER"
              spacing="90"
              style="-fx-padding: 60;">

            <!-- LEFT INFO SECTION -->
            <VBox spacing="18" maxWidth="420">
                <Label text="Yerwada Central Prison"
                       styleClass="title"/>
                <Label text="Prison Management System"
                       styleClass="subtitle"/>
                <Label text="Secure role-based access system using face recognition for guard and prisoner management."
                       wrapText="true"
                       styleClass="subtitle"/>
            </VBox>

            <!-- LOGIN CARD -->
            <VBox spacing="18"
                  alignment="CENTER"
                  prefWidth="360"
                  styleClass="card">

                <Label text="Select Login Role"
                       styleClass="subtitle"/>

                <TextField fx:id="usernameField"
                           promptText="Username"/>

                <PasswordField fx:id="passwordField"
                               promptText="Password"/>

                <!-- ADMIN LOGIN -->
                <Button text="Login as Admin"
                        onAction="#handleLogin"
                        maxWidth="Infinity"
                        styleClass="primary-button"/>

                <!-- CO-ADMIN LOGIN -->
                <Button text="Login as Co-Admin"
                        onAction="#handleCoAdminLogin"
                        maxWidth="Infinity"
                        styleClass="secondary-button"/>

                <!-- MESSAGE -->
                <Label fx:id="messageLabel"
                       style="-fx-text-fill: #ffb3b3;"/>

            </VBox>

        </HBox>
    </center>

</BorderPane>
