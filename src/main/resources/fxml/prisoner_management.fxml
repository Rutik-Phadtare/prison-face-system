<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@../css/modern.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prison.controller.PrisonerController">

    <!-- ================= HEADER ================= -->
    <top>
        <VBox spacing="4" styleClass="page-header">
            <Label style="-fx-font-size: 30;" styleClass="page-title" text="Prisoner Management" />
            <Label style="-fx-font-size: 16; -fx-text-fill: #1c3cd6;" styleClass="section-title" text="Manage prisoner records securely">
            <font>
               <Font name="System Bold" size="12.0" />
            </font></Label>
        </VBox>
    </top>

    <!-- ================= TABLE ================= -->
    <center>
        <TableView fx:id="prisonerTable" styleClass="dark-table">

            <columns>
                <TableColumn fx:id="idCol" prefWidth="60" text="ID" />
                <TableColumn fx:id="nameCol" prefWidth="160" text="Name" />
                <TableColumn fx:id="crimeCol" prefWidth="200" text="Crime" />
                <TableColumn fx:id="cellCol" prefWidth="100" text="Cell No" />
                <TableColumn fx:id="yearsCol" prefWidth="140" text="Sentence (Years)" />
                <TableColumn fx:id="statusCol" prefWidth="140" text="Status" />
                <TableColumn fx:id="remainingCol" prefWidth="160" text="Remaining Time" />
                <TableColumn fx:id="descCol" prefWidth="220" text="Description" />

            </columns>

        </TableView>
    </center>

    <!-- ================= FORM ================= -->
    <bottom>
        <VBox spacing="12" styleClass="form-card">

            <Label style="-fx-text-fill: #1c3cd6;" styleClass="section-title" text="Prisoner Details" textFill="#1c3cd6" />

            <!-- Row 1 -->
            <HBox spacing="12">
                <VBox spacing="4">
                    <Label style="-fx-font-size: 16; -fx-font-family: 'Calibri';" text="Prisoner Name" textFill="#794848">
                  <font>
                     <Font size="9.0" />
                  </font></Label>
                    <TextField fx:id="nameField" promptText="Name" />
                </VBox>

                <VBox spacing="4">
                    <Label style="-fx-font-size: 16; -fx-font-family: 'Calibri';" text="Crime" textFill="#794848" />
                    <TextField fx:id="crimeField" promptText="Crime" />
                </VBox>
            </HBox>

            <!-- Row 2 -->
            <HBox spacing="12">
                <VBox spacing="4">
                    <Label style="-fx-font-size: 16; -fx-font-family: 'Calibri';" text="Cell Number" textFill="#794848" />
                    <TextField fx:id="cellField" promptText="Cell" />
                </VBox>

                <VBox spacing="4">
                    <Label style="-fx-font-size: 16; -fx-font-family: 'Calibri';" text="Sentence Years" textFill="#794848" />
                    <TextField fx:id="yearsField" promptText="Year" />
                </VBox>
                <Label fx:id="remainingTimeLabel" styleClass="remaining-time" text="Remaining Time" />

            </HBox>

            <!-- Description -->
            <VBox spacing="4">
                <Label style="-fx-font-family: 'Calibri'; -fx-font-size: 18;" text="Description / Notes" textFill="#794848">
               <font>
                  <Font name="Calibri" size="24.0" />
               </font></Label>
                <TextField fx:id="descriptionArea" prefHeight="60.0" prefWidth="1154.0" promptText="Prisoner Description" style="-fx-control-inner-background: 'white'; -fx-border-color: 'black';" />

            </VBox>

            <!-- Buttons -->
            <HBox alignment="CENTER_RIGHT" spacing="12">
                <Button onAction="#addPrisoner" styleClass="primary-button" text="Add Prisoner" />

                <Button onAction="#updatePrisoner" style="-fx-text-fill: 'white'; -fx-font-size: 12; -fx-font-style: 'bold'; -fx-background-color: #14a125;" styleClass="secondary-button" text="Update Prisoner">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>

                <Button onAction="#deletePrisoner" style="-fx-background-color: 'lightgray'; -fx-text-fill: 'black'; -fx-font-style: 'bold';" styleClass="secondary-button" text="Delete Selected" />
            </HBox>

        </VBox>
    </bottom>

</BorderPane>
