<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1500.0" styleClass="bg-dashboard" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prison.controller.CoAdminDashboardController">

    <top>
        <fx:include source="header.fxml" />
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 40;">

            <Label styleClass="title" text="Co-Admin Dashboard" />

            <!-- STAT CARD -->
            <VBox prefWidth="280" styleClass="card">
                <Label styleClass="subtitle" text="Total Prisoners" />
                <Label fx:id="prisonerCountLabel" styleClass="title" text="0" />
            </VBox>

            <!-- ACTIONS -->
            <HBox spacing="30" style="-fx-alignment: center;">

                <VBox prefWidth="800.0" styleClass="card">
                    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="824.0" style="-fx-alignment: CENTER;" styleClass="subtitle" text="Prisoner Management" textAlignment="CENTER" />
                    <Label prefHeight="18.0" prefWidth="801.0" style="-fx-alignment: CENTER;" styleClass="muted" text="Add, update and monitor prisoners" />
                    <Button onAction="#openPrisoners" prefHeight="26.0" prefWidth="199.0" style="-fx-alignment: CENTER;" styleClass="primary-button" text="Open">
                  <VBox.margin>
                     <Insets left="300.0" />
                  </VBox.margin></Button>
                </VBox>

            </HBox>

        </VBox>
    </center>

</BorderPane>
