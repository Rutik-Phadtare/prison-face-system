<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.prison.controller.GuardProfileController"
            stylesheets="@../css/modern.css"
            prefWidth="700"
            prefHeight="520"
            style="-fx-background-color: #f5f7fa;">

    <!-- HEADER -->
    <top>
        <VBox style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <padding>
                <Insets top="20" right="25" bottom="20" left="25"/>
            </padding>
            <Label text="PERSONNEL MANAGEMENT"
                   style="-fx-text-fill: #8898aa; -fx-font-size: 11; -fx-font-weight: 600; -fx-letter-spacing: 1.5;"/>
            <Label text="Guard Profile"
                   styleClass="page-title"
                   style="-fx-font-size: 28; -fx-font-weight: 700; -fx-text-fill: #32325d; -fx-padding: 5 0 0 0;" />
        </VBox>
    </top>

    <!-- CENTER -->
    <center>
        <HBox spacing="25" style="-fx-padding: 30 25 25 25;">

            <!-- IMAGE CARD -->
            <VBox spacing="15"
                  alignment="CENTER"
                  styleClass="card"
                  style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #e3e8ee; -fx-border-width: 1; -fx-border-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 15, 0, 0, 3);">
                <padding>
                    <Insets top="25" right="25" bottom="25" left="25"/>
                </padding>

                <VBox alignment="CENTER" spacing="8">
                    <Label text="Profile Photo"
                           style="-fx-text-fill: #32325d; -fx-font-weight: 700; -fx-font-size: 14;"/>
                    <Label text="Upload guard image"
                           style="-fx-text-fill: #8898aa; -fx-font-size: 11;"/>
                </VBox>

                <StackPane style="-fx-background-color: #f6f9fc; -fx-border-color: #e3e8ee; -fx-border-width: 2; -fx-border-style: dashed; -fx-background-radius: 8; -fx-border-radius: 8;">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <ImageView fx:id="guardImage"
                               fitWidth="180"
                               fitHeight="200"
                               preserveRatio="true" />
                </StackPane>

                <Button text="Upload Photo"
                        onAction="#uploadPhoto"
                        styleClass="primary-button"
                        style="-fx-background-color: #5469d4; -fx-text-fill: white; -fx-font-weight: 600; -fx-font-size: 13; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(84,105,212,0.3), 8, 0, 0, 2);"/>

            </VBox>

            <!-- INFO CARD -->
            <VBox spacing="18"
                  styleClass="card"
                  style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #e3e8ee; -fx-border-width: 1; -fx-border-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 15, 0, 0, 3);"
                  prefWidth="400"
                  HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="25" right="25" bottom="25" left="25"/>
                </padding>

                <VBox spacing="6">
                    <Label text="Personal Information"
                           style="-fx-text-fill: #32325d; -fx-font-weight: 700; -fx-font-size: 16;"/>
                    <Separator style="-fx-background-color: #e3e8ee;"/>
                </VBox>

                <VBox spacing="6">
                    <Label text="Full Name"
                           style="-fx-text-fill: #8898aa; -fx-font-size: 12; -fx-font-weight: 600;"/>
                    <TextField fx:id="nameField"
                               promptText="Enter guard name"
                               style="-fx-background-color: #f6f9fc; -fx-border-color: #e3e8ee; -fx-border-width: 1; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10 12; -fx-font-size: 13; -fx-prompt-text-fill: #adb5bd;"/>
                </VBox>

                <VBox spacing="6">
                    <Label text="Role / Designation"
                           style="-fx-text-fill: #8898aa; -fx-font-size: 12; -fx-font-weight: 600;"/>
                    <TextField fx:id="designationField"
                               promptText="Enter designation"
                               style="-fx-background-color: #f6f9fc; -fx-border-color: #e3e8ee; -fx-border-width: 1; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10 12; -fx-font-size: 13; -fx-prompt-text-fill: #adb5bd;"/>
                </VBox>

                <VBox spacing="6">
                    <Label text="Shift Assignment"
                           style="-fx-text-fill: #8898aa; -fx-font-size: 12; -fx-font-weight: 600;"/>
                    <ComboBox fx:id="shiftBox"
                              promptText="Select shift"
                              maxWidth="Infinity"
                              style="-fx-background-color: #f6f9fc; -fx-border-color: #e3e8ee; -fx-border-width: 1; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12; -fx-font-size: 13;"/>
                </VBox>

                <HBox spacing="15" alignment="CENTER_LEFT">
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label text="Status"
                               style="-fx-text-fill: #8898aa; -fx-font-size: 12; -fx-font-weight: 600;"/>
                        <HBox>
                            <Label fx:id="statusBadge"
                                   text="ACTIVE"
                                   style="-fx-background-color: #d4edda; -fx-text-fill: #155724; -fx-padding: 8 16; -fx-background-radius: 20; -fx-font-weight: 700; -fx-font-size: 11; -fx-letter-spacing: 0.5;" />
                        </HBox>
                    </VBox>

                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label text="Joining Date"
                               style="-fx-text-fill: #8898aa; -fx-font-size: 12; -fx-font-weight: 600;"/>
                        <DatePicker fx:id="joiningDatePicker"
                                    maxWidth="Infinity"
                                    style="-fx-background-color: #f6f9fc; -fx-border-color: #e3e8ee; -fx-border-width: 1; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12; -fx-font-size: 13;"/>
                    </VBox>
                </HBox>

                <VBox spacing="6">
                    <Label text="Background / Notes"
                           style="-fx-text-fill: #8898aa; -fx-font-size: 12; -fx-font-weight: 600;"/>
                    <TextArea fx:id="descriptionArea"
                              prefHeight="80"
                              promptText="Enter additional details or background information"
                              wrapText="true"
                              style="-fx-background-color: #f6f9fc; -fx-border-color: #e3e8ee; -fx-border-width: 1; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10 12; -fx-font-size: 13; -fx-prompt-text-fill: #adb5bd;"/>
                </VBox>

                <Separator style="-fx-background-color: #e3e8ee;"/>

                <HBox alignment="CENTER_RIGHT">
                    <Button text="Save Changes"
                            onAction="#saveChanges"
                            styleClass="primary-button"
                            style="-fx-background-color: #5469d4; -fx-text-fill: white; -fx-font-weight: 600; -fx-font-size: 14; -fx-padding: 12 32; -fx-background-radius: 6; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(84,105,212,0.3), 10, 0, 0, 3);"/>
                </HBox>

            </VBox>

        </HBox>
    </center>

</BorderPane>
