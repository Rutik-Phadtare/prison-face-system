<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@../css/modern.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prison.controller.PrisonerController">

    <!-- ================= HEADER ================= -->
    <top>
        <VBox spacing="4" styleClass="page-header">
            <Label style="-fx-font-size: 30;" styleClass="page-title" text="Prisoner Management" />
            <Label style="-fx-font-size: 16; -fx-text-fill: #1c3cd6;" styleClass="section-title" text="Manage prisoner records securely">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Label>
        </VBox>
    </top>

    <!-- ================= TABLE ================= -->
    <center>
        <TableView fx:id="prisonerTable" styleClass="dark-table">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="60" text="ID" />
                <TableColumn fx:id="nameCol" prefWidth="160" text="Name of Prisoner" />
                <TableColumn fx:id="crimeCol" prefWidth="200" text="Crime" />
                <TableColumn fx:id="cellCol" prefWidth="100" text="Cell No" />
                <TableColumn fx:id="yearsCol" prefWidth="140" text="Sentence (Years)" />
                <TableColumn fx:id="statusCol" prefWidth="140" text="Status" />
                <TableColumn fx:id="remainingCol" prefWidth="160" text="Release Date" />
                <TableColumn fx:id="descCol" prefWidth="220" text="Description" />
            </columns>
        </TableView>
    </center>

    <!-- ================= FORM ================= -->
    <bottom>
        <VBox spacing="12" styleClass="form-card">

            <Label style="-fx-text-fill: #1c3cd6;" styleClass="section-title" text="Prisoner Details" />

            <!-- ================= ROW 1 ================= -->
            <HBox spacing="12">
                <VBox spacing="4">
                    <Label text="Prisoner Name" textFill="#794848" />
                    <TextField fx:id="nameField" prefHeight="38.0" prefWidth="379.0" promptText="Name" />
                </VBox>

                <VBox spacing="4">
                    <Label text="Crime" textFill="#794848" />
                    <ComboBox fx:id="crimeField" editable="true" promptText="Crime" />

                </VBox>
            </HBox>

            <!-- ================= ROW 2 ================= -->
            <HBox alignment="CENTER_LEFT" spacing="12">

                <VBox spacing="4">
                    <Label text="Cell Number" textFill="#794848" />
                    <ComboBox fx:id="cellField" editable="true" promptText="Cell" />

                </VBox>

                <VBox spacing="4">
                    <Label text="Sentence Duration" textFill="#794848" />

                    <HBox spacing="8">
                        <Spinner fx:id="yearSpinner" editable="true" prefWidth="80" promptText="MM" />
                        <Label text="Years" />
                        <Spinner fx:id="monthSpinner" editable="true" prefWidth="80" promptText="YY" />
                        <Label text="Months" />
                    </HBox>
                </VBox>

                <VBox spacing="4">
                    <Label text="Remaining Time" textFill="#d39c00" />
                    <Label fx:id="remainingTimeLabel" styleClass="remaining-time" text="â€”" />
                </VBox>

            </HBox>

            <!-- ================= DESCRIPTION ================= -->
            <VBox spacing="4">
                <Label text="Description / Notes" textFill="#794848" />
                <TextArea fx:id="descriptionArea" prefHeight="70" promptText="Prisoner Description" style="-fx-control-inner-background: white; -fx-border-color: black;" wrapText="true" />
            </VBox>

            <!-- ================= BUTTONS ================= -->
            <HBox alignment="CENTER_RIGHT" spacing="12">
                <Button onAction="#addPrisoner" styleClass="primary-button" text="Add Prisoner" />

                <Button onAction="#updatePrisoner" style="-fx-background-color: #14a125; -fx-text-fill: white;" styleClass="secondary-button" text="Update Prisoner" />

                <Button onAction="#deletePrisoner" style="-fx-background-color: lightgray; -fx-text-fill: black;" styleClass="secondary-button" text="Delete Selected" />
            </HBox>

        </VBox>
    </bottom>

</BorderPane>
